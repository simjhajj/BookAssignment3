@model Book_Assignment3.Models.Book // Defines the model for this view

@{
    ViewData["Title"] = "Create"; // Sets the title of the page
}

<style>
    /* Styling for headings */
    h1 {
        color: #007bff; /* Blue color for headings */
        margin-bottom: 20px; /* Add some space below the heading */
    }

    /* Styling for form groups */
    .form-group {
        margin-bottom: 20px; /* Add space between form fields */
    }

    /* Styling for submit button */
    input[type="submit"] {
        background-color: #007bff; /* Blue background for submit button */
        color: #fff; /* White text color */
    }

        /* Styling for submit button on hover */
        input[type="submit"]:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    /* Styling for links */
    a {
        color: #007bff; /* Blue color for links */
        text-decoration: none; /* Remove underline from links */
        margin-right: 10px; /* Add space between links */
    }

        /* Styling for links on hover */
        a:hover {
            text-decoration: underline; /* Underline links on hover */
        }
</style>

<h1>Create</h1> <!-- Heading for the create page -->

<h4>Book</h4> <!-- Subheading for the book section -->
<hr /> <!-- Horizontal line separator -->

<div class="row">
    <!-- Bootstrap grid row -->
    <div class="col-md-4">
        <!-- Bootstrap grid column with medium size -->
        <form asp-action="Create">
            <!-- Form for creating a new book -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Validation summary for model errors -->
            <div class="form-group">
                <!-- Form group for Title input -->
                <label asp-for="Title" class="control-label"></label> <!-- Label for Title input -->
                <input asp-for="Title" class="form-control" /> <!-- Title input field -->
                <span asp-validation-for="Title" class="text-danger"></span> <!-- Validation message for Title input -->
            </div>
            <!-- Similar form groups for PublicationDate, Genre, and Price inputs -->
            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label"></label>
                <input asp-for="PublicationDate" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> <!-- Submit button -->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a> <!-- Link to go back to the list of books -->
</div>

@section Scripts {
     <!-- Section for scripts -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); // Renders partial validation scripts
    }
}
